<div class="container">
<div class="row">
	<div class="col-md-5 col-md-offset-3">
		<h4 class="help-block">
			<%if @user.errors.any?%>
					<%@user.errors.full_messages.each do |error_msg|%>
						<%= error_msg %>
					<%end%>
			<%end%>
		</h4>
	<div class="form-group">
		<%= form_for @user, :html => { :multipart => true } do |f| %>
			<div class="form-group">
				<%= f.text_field :name, :class => "form-control", placeholder: "name"%>
			</div>
			<br>
			<div class="form-group">
				<%= f.email_field :email, :class => "form-control", placeholder: "example@email.com"%>
			</div>
			<br>
			<div class="form-group">
				<%= f.password_field :password, :class => "form-control", placeholder: "Password"%>
			</div>
			<br>
			<div class="form-group">
				<%= f.password_field :password_confirmation, :class => "form-control", placeholder: "password_confirmation"%>
			</div>
			<div class="form-group col-xs-7">
				<%= f.date_field :birthday,:cols => 15, :class => "form-control", placeholder: "password_confirmation"%>
			</div>
			<br>
			<div class="form-group">
				<%= f.text_area :summary, :rows => 5, :class => "form-control", placeholder: "Write something about yourself"%>
			</div>
			<hr>
			<%= f.label :photo %> 
			<%= f.file_field :photo %>
			<hr>
			<%= f.submit 'Submit', :class => "btn btn-default"%>
			<%end%>
		</div>
	</div>
</div>
</div>