<%if @user.errors.any?%>
<ul>
	<%@user.errors.full_messages.each do |error_msg|%>
	<li><%= error_msg %></li>
	<%end%>
</ul>
<%end%>

<%= form_for @user, :html => { :multipart => true } do |f| %>
	<%= f.label :name%>
	<%= f.text_field :name%>
	<br>
	<%= f.label :email%>
	<%= f.text_field :email%>
	<br>
	<%= f.label :password%>
	<%= f.password_field :password%>
	<br>
	<%= f.label :password_confirmation%>
	<%= f.password_field :password_confirmation%>
	<hr>
	<%= f.label :photo %> 
	<%= f.file_field :photo %>
	<hr>
	<%= f.submit 'Submit'%>
<%end%>