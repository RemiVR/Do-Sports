<h3>User Profile</h3>
<ul>
	<%= flash[:notice]%>
	<li><%= @user.name%></li>
	<li><%= @user.email%></li>
	<li><%= @user.birthday%></li>
	<li><%= @user.summary%></li>
</ul>
<%= image_tag @user.photo.url(:medium) %>
<br>
<% unless current_user.nil? || @user.id != current_user.id%>
<%= link_to("Edit", edit_user_path)%>
<%end%>
