<div class="chat">
	<div class="message">
		<ul>
			<% @messages.each do |message| %>
				<li>
					<%= message.user.name.capitalize %>:  <%= message.content.capitalize %>
					<p class="message-time"><%= time_ago_in_words(message.created_at)%></p>
				</li>
			<% end %>
		</ul>
	</div>
</div>
	<div class="row">
	 <div class="col-lg-6">
	    <div class="form-group">
	    	<%= form_for @message do |f|%>
				<%= f.hidden_field :user_id, value: current_user.id %>
				<%= f.text_field :content, :class => "form-control" %>
				<%= f.submit "submit", :class => "btn btn-default form-group-btn"%>
			<% end %>
	    </div>
	  </div>
	</div>

 