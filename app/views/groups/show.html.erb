<div class="container">
	<div class="row">
		<div class="col-md-3" style="background: pink;">
			<% unless current_user.nil? %>
				<% if @group.id == current_user.group_id %>
					<%= link_to("Leave", leave_group_path, method: :post)%>
				<% elsif current_user.group_id == nil %>
					<%= link_to("Join", join_group_path(@group.id), method: :post)%>
				<% end %>
			<%end%>
			<h3>The list of users!</h3>
			<h3>User Profile</h3>
			<p> This group have <%= @users_count%> users.</p>
			<% @users.each do |user|%>
				<h4><%= image_tag user.photo.url(:thumb)%><%= user.name%></h4>
				<hr>
			<%end%>
				</div>
				<div class="col-md-9" style="background: yellowgreen;">
					<% unless current_user.nil?%>
						<% if @group.admin_id == current_user.id %>
							<div class="dropdown">
			  					<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">Admin<span class="caret"></span></button>
				  				<ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
				  					<li role="presentation" class="dropdown-header">Group menu</li>
				    				<li role="presentation"><a role="menuitem" tabindex="-1" ><%= link_to("Edit", edit_group_path(@group.id))%></li>
				    				<li role="presentation"><a role="menuitem" tabindex="-1" ><%= link_to("Delete", group_path(@group.id), method: :delete)%></li>
				  				</ul>
							</div>
						<% end %>
					<% end %>
					<h1><%= @group.name%></h1>
					<%= image_tag @group.logo.url(:thumb), :class => "img-rounded" %><%= @group.description%>
					<h4>Type of sport: <%= @sport%></h4>
					<hr>
					<h1>Upcoming events </h1>
						<ul>
							<li>
								<%unless current_user.nil?%>
									<% if current_user.id == @group.admin_id%>
										<%= link_to("Add new Event", new_group_event_path(@group.id))%>
									<%end%>
								<%end%>
							</li>
						</ul>
						<hr>
						<ul>
							<% @events.each do |event|%>
								<div style="background: yellow; padding: 10px; margin:5px;">
									<h2><li><%= event.title%></li></h2>
									<h4><li><%= event.date%></li></h4>
									<% unless current_user.nil? %>
										<% if current_user.group_id == @group.id %>
											<%= link_to("Event details", event_path(event))%>
											<br>
										<% end %>
										<% if current_user.id == @group.admin_id %>
											<div class="dropdown">
					  							<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
					  								<span class="caret"></span></button>
						  							<ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
						    							<li role="presentation"><a role="menuitem" tabindex="-1" ><%= link_to("Edit", edit_event_path(event))%></li>
						    							<li role="presentation"><a role="menuitem" tabindex="-1" ><%= link_to("Delete", event_path(event), method: :delete)%></li>
						  							</ul>
											</div>
										<%end%>
									<%end%>

								</div>
							<%end%>
							<br>
						</ul>
						<%= link_to("Back", '/')%>
			<br>
		</div>
		<br>
	</div>
</div>