<%= form_for @group, :html => { :multipart => true } do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<hr>
	<%= f.select(:sport_id, @sports.collect {|sport| [sport.title, sport.id]}) %>
	<hr>
	<%= f.label :logo%>
	<%= f.file_field :logo%>
	<hr>
	<%= f.submit 'Create' %>
	<hr>
<%end%>
<br>
<%= link_to("Back", '/', style: "btn btn-default")%>

