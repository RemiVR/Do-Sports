<!DOCTYPE html>
<html>
<head>
  <title>DoSports</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header class="container">
	<div class="row">
		<div class="col-md-7">
		<h1><%=link_to("Do sport!", '/')%></h1>
		</div>
		<% if current_user %>
			<div class="col-md-3 pull-right">
	  		Signed in as <%= link_to(current_user.name, user_path(current_user.id))%>  <%= link_to "Logout", '/logout', :class => "btn btn-danger" %>
	  	</div>
		<%else%>
		<div class="col-md-5 pull-right">
			<div class="form-inline">
	  		<div class="form-group">
					<%= flash[:error]%>
					<%= form_tag login_path do %>
						<%= email_field_tag :email, nil, :class => "form-control", placeholder: "Email" %>
						<%= password_field_tag :password, nil, :class => "form-control", placeholder: "Password" %>
						<%= submit_tag "Sign in", :class => "btn btn-success" %>
					<% end %>
						<%= link_to 'Signup', '/signup' %>
				</div>
			</div>
		</div>
	</div>
	<%end%>
</header>
	<hr>
	<div class="container">
		<%= yield %>
	</div>

</body>
</html>