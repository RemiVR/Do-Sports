<!DOCTYPE html>
<html>
<head>
  <title>DoSports</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
	<h1><%=link_to("Do sport!", '/')%></h1>
</header>
<hr>
<div class="form-inline">
	<% if current_user %>
  		Signed in as <%= link_to(current_user.name, user_path(current_user.id))%> | <button><%= link_to "Logout", '/logout' %></button>
	<%else%>
		<button><%= link_to 'Login', '/login' %></button> | <button><%= link_to 'Signup', '/signup' %></button>
	<%end%>
</div>
<hr>
<br>
<%= yield %>

</body>
</html>