<!DOCTYPE html>
<html>
<head>
  <title>DoSports</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => false %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
	<div class="container">
		<div class="row">
			<div class="col-md-4 pull-left">
				<ul class="nav nav-pills">
					<a href="/"><h1>Do-sport</h1></a>
				  <li role="presentation"><a href="/">Home</a></li>
				  <li role="presentation"><a href="">My Group</a></li>
				  <li role="presentation"><a href="#">About us</a></li>
				</ul>
			</div>
			<% if current_user %>
				<div class="col-md-3 pull-right login-form">
			  			Signed in as <%= link_to(image_tag(current_user.photo.url(:thumb), :class => "img-rounded"), user_path(current_user.id))%>  <%= link_to "Logout", '/logout', :class => "btn btn-danger" %>
		  		</div>
			<%else%>
				<div class="col-md-5 pull-right login-form">
					<div class="form-inline">
			  			<div class="form-group">
							<%= flash[:error]%>
							<%= form_tag login_path do %>
								<%= email_field_tag :email, nil, :class => "form-control", placeholder: "Email" %>
								<%= password_field_tag :password, nil, :class => "form-control", placeholder: "Password" %>
								<%= submit_tag "Sign in", :class => "btn btn-success" %>
								<%= link_to 'Signup', '/signup' %>
							<% end %>
						</div>
					</div>
				</div>
			<%end%>
		</div>
	</div>
</header>
	<div class="container">
		<%= yield %>
	</div>
<footer>
	<div class="footer">
		<div class="col-md-4 col-md-offset-3">
			<ul class="nav nav-pills">
			  	<li><a href="/">Home</a></li>
			  	<li><a href="#">About us</a></li>
			</ul>
		</div>
		<div class="col-md-2">
			<h4>Find us on</h4>
			<a href=""><img src="http://www.stonesterrain.com/facebook-icon.png" height="26"></a>
			<a href="#"><img src="http://www.registrar.umd.edu/images/master/twitter_icon.png" height="26"></a>
		</div>
	</div>
</footer>

</body>
</html>